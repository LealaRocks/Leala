


<div class="btn-group">
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#leala-newclient-modal">
        <span class="glyphicon glyphicon-plus"></span> New
    </button>
</div>

<div class="ibox float-e-margins">
    <div class="ibox-title"><h5>Clients</h5>
        <div class="ibox-tools">
            <button class="btn-link" data-toggle="modal" data-target="#leala-newclient-modal" title="New Client">
                <i class="fa fa-file-o"></i>
            </button>
        </div>
    </div>
    <div class="ibox-content">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: clients">
                <tr>
                    <td data-bind="text: name"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<!-- New Client Modal -->
<div class="modal fade" id="leala-newclient-modal" tabindex="-1" role="dialog" aria-labelledby="leala-newclient-modalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <form data-bind="submit: saveNewClient">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="leala-newclient-modalLabel">New Client</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="form-horizontal" data-bind="with: newClient">
                            <div class="form-group" data-bind="validationElement: name">
                                <label class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" placeholder="Client Name" required data-bind="textInput: name">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
