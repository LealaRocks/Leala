@model iSOLID.RiskAdvisory.App.ViewModels.RegisterViewModel
@{
    Layout = "";
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>L&#201;ALA+ | Register</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">L+</h1>

            </div>
            <h3>Register to L&#201;ALA+</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" data-bind="submit: submit, with: model" action="@Url.Action("Register", "User")" method="post">
                <div class="form-group" data-bind="validationElement: firstName">
                    <input type="text" name="FirstName" class="form-control" placeholder="First Name" required data-bind="textInput: firstName" maxlength="50" value="@Model.FirstName">
                </div>
                <div class="form-group" data-bind="validationElement: lastName">
                    <input type="text" name="LastName" class="form-control" placeholder="Surname" required data-bind="textInput: lastName" maxlength="50" value="@Model.LastName">
                </div>
                <div class="form-group" data-bind="validationElement: email">
                    <input type="email" name="Email" class="form-control" placeholder="Email" required data-bind="textInput: email" maxlength="50" value="@Model.Email">
                </div>
                <div class="form-group" data-bind="validationElement: password">
                    <input type="password" name="Password" class="form-control" placeholder="Password" required data-bind="textInput: password" maxlength="50" value="@Model.Password">
                </div>
                <div class="form-group" data-bind="validationElement: confirmPassword">
                    <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required data-bind="textInput: confirmPassword" maxlength="50" value="@Model.ConfirmPassword">
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b" data-bind="enable: isValid">Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register")">Login</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/knockout/dist/knockout.js"></script>
    <script src="~/lib/knockout-validation/dist/knockout.validation.js"></script>

    <!-- iCheck -->
    <script src="~/lib/iCheck/icheck.min.js"></script>

    <script src="~/js/site.js"></script>

    <script src="~/js/models/register.js"></script>
    <script src="~/js/viewModels/registerViewModel.js"></script>

</body>

</html>

